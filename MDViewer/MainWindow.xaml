<Window x:Class="MDViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDViewer"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:properties="clr-namespace:MDViewer.Properties"
        Title="{Binding Source={x:Static properties:Resources.AppTitle}, StringFormat='MDViewer: {0}'}" Height="600" Width="800" Icon="pack://application:,,,/MDViewer;component/Resources/md-viewer-icon.ico"
        AllowDrop="True" Drop="Window_Drop">
    <Window.Resources>
        <!-- Style per i pulsanti Material -->
        <Style x:Key="MaterialButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Animazione rotazione per il loading spinner -->
        <Storyboard x:Key="SpinnerRotation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                           From="0" To="360" Duration="0:0:1"/>
        </Storyboard>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Toolbar con design Material -->
        <Grid Grid.Row="0" Margin="16" Background="#F5F5F5" Height="48">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- Pulsante Apri con icona folder -->
            <Button Grid.Column="0" x:Name="BtnApri" Click="OpenFile_Click" 
                    Style="{StaticResource MaterialButtonStyle}"
                    Margin="8,0" ToolTip="{x:Static properties:Resources.TooltipOpenFile}" Width="40" Height="32">
                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="16" Text="&#xE8E5;" 
                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <TextBlock Grid.Column="1" Text="{x:Static properties:Resources.FileLabel}" VerticalAlignment="Center" 
                      Margin="8,0" FontWeight="Medium" Foreground="#424242"/>
            <TextBox Grid.Column="2" x:Name="FilePathBox" Margin="8,0" IsReadOnly="True" 
                    Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                    Padding="8,4" VerticalContentAlignment="Center"/>

            <!-- Loading Spinner -->
            <Grid Grid.Column="3" x:Name="LoadingSpinner" Margin="8,0" Width="32" Height="32" Visibility="Collapsed">
                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="16" Text="&#xE1CD;" 
                          VerticalAlignment="Center" HorizontalAlignment="Center"
                          Foreground="#2196F3">
                    <TextBlock.RenderTransform>
                        <RotateTransform CenterX="8" CenterY="8"/>
                    </TextBlock.RenderTransform>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource SpinnerRotation}"/>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
            </Grid>

            <!-- Pulsante Stampa con icona printer -->
            <Button Grid.Column="4" x:Name="BtnStampa" Click="Print_Click" 
                    Style="{StaticResource MaterialButtonStyle}"
                    Margin="8,0" ToolTip="{x:Static properties:Resources.TooltipPrint}" Width="40" Height="32"
                    IsEnabled="False">
                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="16" Text="&#xE749;" 
                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <!-- Pulsante Ricarica con icona refresh -->
            <Button Grid.Column="5" x:Name="BtnRicarica" Click="Reload_Click" 
                    Style="{StaticResource MaterialButtonStyle}"
                    Margin="8,0" ToolTip="{x:Static properties:Resources.TooltipReload}" Width="40" Height="32"
                    IsEnabled="False">
                <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="16" Text="&#xE72C;" 
                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
        </Grid>
        <Grid Grid.Row="1" Margin="16,0,16,16">

            <Image Source="pack://application:,,,/MDViewer;component/Resources/md-viewer-icon-512x512.png" Opacity="0.2" />

            <!-- Messaggio di stato/errore -->
            <Border x:Name="StatusPanel" Background="#FFF3CD" BorderBrush="#FFEAA7" 
                    BorderThickness="1" CornerRadius="4" Padding="16" 
                    VerticalAlignment="Top" Margin="0,16,0,0" Visibility="Collapsed">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="StatusIcon" FontFamily="Segoe MDL2 Assets" FontSize="16" 
                              Text="&#xE783;" Foreground="#856404" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusMessage" Text="Loading..." 
                              Foreground="#856404" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- WebView2 per il contenuto Markdown -->
            <wv2:WebView2 x:Name="Viewer" />
        </Grid>
    </Grid>
</Window>
